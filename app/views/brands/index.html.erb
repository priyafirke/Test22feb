<h1>Listing brands</h1>

<table>
  <tr>
    <th>Cloths brand</th>
    <th>Shoes brand</th>
    <th>Jewellery brands</th>
    <th>Bags brands</th>
    <th>Fragrance brands</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.cloths_brand %></td>
    <td><%= brand.shoes_brand %></td>
    <td><%= brand.jewellery_brands %></td>
    <td><%= brand.bags_brands %></td>
    <td><%= brand.fragrance_brands %></td>
    <td><%= link_to 'Show', brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

